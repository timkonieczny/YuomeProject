<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.timkonieczny.yuome"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.timkonieczny.yuome.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.timkonieczny.yuome.SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:parentActivityName="com.timkonieczny.yuome.LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.timkonieczny.yuome.LoginActivity" />
        </activity>
        <activity
            android:name="com.timkonieczny.yuome.CreateCommunityActivity"
            android:label="@string/title_activity_create_community" >
        </activity>
        <activity
            android:name="com.timkonieczny.yuome.FirstActivity"
            android:label="@string/title_activity_first" >
        </activity>
        <activity
            android:name="com.timkonieczny.yuome.JoinActivity"
            android:label="@string/title_activity_join" >
        </activity>
        <activity
            android:name="com.timkonieczny.yuome.JoinCommunityActivity"
            android:label="@string/title_activity_join_community" >
        </activity>
        <activity
            android:name="com.timkonieczny.yuome.SplashscreenActivity"
            android:label="@string/title_activity_splashscreen" >
        </activity>
        <activity
            android:name="com.timkonieczny.yuome.MyDebtsActivity"
            android:label="@string/title_activity_my_debts" >
        </activity>
        <activity
            android:name="com.timkonieczny.yuome.ScanReceiptActivity"
            android:label="@string/title_activity_scan_receipt" >
        </activity>
        <activity
            android:name="com.timkonieczny.yuome.TestActivity"
            android:label="@string/title_activity_test" >
        </activity>
        <activity
            android:name="com.timkonieczny.yuome.MyReceiptsActivity"
            android:label="@string/title_activity_my_receipts" >
        </activity>
    </application>
    
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

</manifest>
